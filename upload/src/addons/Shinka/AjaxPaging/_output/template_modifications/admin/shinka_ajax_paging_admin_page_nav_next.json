{
    "template": "page_nav",
    "description": "Replaces next pager anchor with AJAX.",
    "execution_order": 10,
    "enabled": true,
    "action": "str_replace",
    "find": "<a href=\"{$next}\" class=\"pageNav-jump pageNav-jump--next\">{{ phrase('next') }}</a>",
    "replace": "<a href=\"{$next}\" \n   class=\"pageNav-jump pageNav-jump--next\"\n   data-page=\"{{ $current + 1 }}\">\n\t{{ phrase('next') }}\n</a>"
}